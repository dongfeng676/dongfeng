<div class="panel panel-default">
  <div class="panel-heading login">
    <h3><%=t(".sign_in")%></h3>
  </div>
  <div class="panel-body login">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name),class:"form-horizontal",role:"form") do |f| %>
        <% if flash[:alert].present?%>
          <div class="form-group form_padding">
            <div class="col-md-6 col-md-offset-3">
              <p class="alert alert-warning"><%=flash[:alert]%></p>
            </div>
          </div>
        <% end %>
        <div class="form-group form_padding">
          <%= f.label :email ,t(".email"), class:"col-md-4 col-md-offset-1 control-label "%>
          <div class="col-md-4">
            <%= f.email_field :email, autofocus: true ,class:"form-control"%>
          </div>
        </div>

        <div class="form-group form_padding">
          <%= f.label :password ,t(".password"), class:"col-md-4 col-md-offset-1 control-label"%>
          <div class="col-md-4">
            <%= f.password_field :password, autocomplete: "off",class:"form-control" %>
          </div>
        </div>
        <div class="form-group form_padding">
          <%= f.label :captcha ,t(".captcha"), class:"col-md-4 col-md-offset-1"%>
          <div class="col-md-2">
            <%= rucaptcha_input_tag(class: 'form-control', placeholder: 'Input Captcha') %>
          </div>
          <%= rucaptcha_image_tag(alt: 'Captcha',class:"col-md-2 captcha") %>
        </div>
        <div class="form-group form_padding">
          <% if devise_mapping.rememberable? %>
            <div class="col-md-2 col-md-offset-4">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me ,t(".keep_sign_in")%>
            </div>
            <div class="actions col-md-2">
              <%= f.submit t(".sign_in"),class: 'form-control btn-primary' %>
            </div>
          <% end %>
        </div>
      <% end %>
  </div>
  <div class="top_border login">
    <%= render "devise/shared/links" %>
  </div>
</div>
<script type="text/javascript">
  $(".captcha").click(function(){
    captcha($(this));
  })
</script>



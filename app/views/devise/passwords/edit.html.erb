<div class="panel panel-default">
  <div class="panel-heading login">
    <h2><%=t(".forget_password")%></h2>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group form_padding">
        <%= f.label :password, t(".new_password") ,class:"col-md-4 col-md-offset-1"%>
        <div class="col-md-4">
          <%= f.password_field :password, autofocus: true, autocomplete: "off",class:"form-control" %>
        </div>
      </div>

      <div class="form-group form_padding">
        <%= f.label :password_confirmation, t(".confirm_password") ,class:"col-md-4 col-md-offset-1"%>
        <div class="col-md-4">
          <%= f.password_field :password_confirmation, autocomplete: "off",class:"form-control" %>
        </div>
      </div>

      <div class="form-group form_padding">
        <div class="col-md-2 action col-md-offset-5">
          <%= f.submit t(".reset_password"),class: 'form-control btn-primary '  %>
        </div>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

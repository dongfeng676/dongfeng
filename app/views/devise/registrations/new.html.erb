<div class="panel panel-default ">
  <div class="panel-heading login">
    <h2><%=t(".sign_up")%></h2>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group form_padding">
        <%= f.label :nick_name ,t(".nick_name"), class:"col-md-4 col-md-offset-1"%>
        <div class="col-md-4">
          <%= f.text_field :nick_name, autofocus: true, class:"form-control" %>
        </div>
      </div>
      <div class="form-group form_padding">
        <%= f.label :phone_number ,t(".phone_number"), class:"col-md-4 col-md-offset-1"%>
        <div class="col-md-4">
          <%= f.text_field :phone_number, autofocus: true, class:"form-control" %>
        </div>
      </div>
      <div class="form-group form_padding">
        <%= f.label :email ,t(".email"), class:"col-md-4 col-md-offset-1"%>
        <div class="col-md-4">
          <%= f.email_field :email, autofocus: true, class:"form-control" %>
        </div>
      </div>

      <div class="form-group form_padding">
        <%= f.label :password ,t(".password"), class:"col-md-4 col-md-offset-1"%>
        <div class="col-md-4">
          <%= f.password_field :password, autocomplete: "off", class:"form-control"%>
        </div>
      </div>

      <div class="form-group form_padding">
        <%= f.label :password_confirmation,t(".confirm_password"), class:"col-md-4 col-md-offset-1"%>
        <div class="col-md-4">
          <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
        </div>
      </div>

      <div class="form-group form_padding">
        <%= f.label :password ,t(".captcha"), class:"col-md-4 col-md-offset-1"%>
        <div class="col-md-2">
          <%= rucaptcha_input_tag(class: 'form-control', placeholder: 'Input Captcha') %>
        </div>
        <%= rucaptcha_image_tag(alt: 'Captcha',class:"col-md-2 captcha") %>
      </div>
      <br>
      <div class="form-group form_padding">
        <div class="col-md-2 col-md-offset-5">
          <%= f.submit t(".sign_up") ,class: 'form-control btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
<script type="text/javascript">
  $(".captcha").click(function(){
    captcha($(this));
  })
</script>

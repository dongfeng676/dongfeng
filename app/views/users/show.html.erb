<div class="container">
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <%if current_user.image.present?%>
          <span><%= image_tag current_user.image_url,class:"user_image"%></span>
        <% end %>
        <span class="user_nick_name"><%= current_user.nick_name%></span>
      </div>
      <div class="panel-body">
        <p>
          <%=t(".id")%>
          <%=current_user.id%>
          <%=t(".user")%>
        </p>
        <p><%=current_user.created_at%></p>
        <p><%=t(".current_role")%> <%=user_role(current_user)%></p>
        <p>
          <%=link_to t(".change_password") , edit_user_registration_path%>
        </p>
      </div>
    </div>
  </div>

  <div class="col-md-8">
    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#home"><%=t(".base_info")%></a></li>
    </ul>
    <div class="tab-content">
      <div id="home" class="tab-pane fade in active">
        <%= form_for(current_user, as: current_user, url: user_path(current_user), html: { method: :put }) do |f| %>

          <div class="form-group form_padding">
            <%= f.label :nick_name ,t(".nick_name"), class:"col-md-2"%>
            <div class="col-md-6">
              <%= f.text_field :nick_name, autofocus: true, class:"form-control"%>
            </div>
          </div>
          <div class="form-group form_padding">
            <%= f.label :phone_number ,t(".phone_number"), class:"col-md-2"%>
            <div class="col-md-6">
              <%= f.text_field :phone_number, autofocus: true, class:"form-control" %>
            </div>
          </div>
          <div class="form-group form_padding">
            <%= f.label :email ,t(".email"), class:"col-md-2"%>
            <div class="col-md-6">
              <%= f.email_field :email, autofocus: true, class:"form-control", disabled:"disabled"%>
            </div>
          </div>

          <div class="form-group form_padding">
            <%= f.label :image ,t(".image"), class:"col-md-2"%>
            <div class="col-md-6">
                <%= f.file_field :image, class:"form-control"%>
            </div>
          </div>

          <div class="form-group form_padding">
            <div class="col-md-2 col-md-offset-3">
              <%= f.submit t(".save"), class: 'form-control btn-primary' %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    
  </div>
</div>
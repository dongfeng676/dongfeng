<div class="row">
  <div class="col-sm-10 col-sm-offset-1">
    <div class="panel panel-default">
      <div class="panel-heading">
        <% cache @category do%>
          <%=@category.name%>
        <% end %>
        <%=t(".article")%>
      </div>
      <% cache @articles do %>
        <div class="panel-body">
          <% if @articles.present?%>
            <% @articles.each do |article| %>
                <p>
                  <span><%= link_to article.name,article_path(article)%></span>
                  <span class="pull-right">
                    <%= article.user.try(:nick_name) || article.user.try(:email)%>
                    <%=t('.created_at')%>
                    <%=custome_time_ago(article.created_at)%></span>
                </p>
            <% end %>
            <%=paginate @articles%>
          <% else %>
            <%=t('.blank')%>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
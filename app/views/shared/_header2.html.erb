<div class="header">
  <div class="header_logo">
    <span>把酒与东风</span>
  </div>
  <div class="header_login">
    <div class="btn-group">
      <% if user_signed_in? %>
        <button type="button" class="btn current_user dropdown-toggle" data-toggle="dropdown">
          <%=current_user.nick_name || current_user.email%>
          <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li>
            <%=link_to "个人中心" , user_path(current_user)%>
          </li>
          <li class="divider"></li>
          <li>

            <%=link_to "注销",destroy_user_session_path, method: :delete%>
          </li>
        </ul>
        
      <% else %>
        <span><%=link_to "登录", new_user_session_path%></span>
        <span><%=link_to "注册", new_user_registration_path%></span>
      <% end %>
    </div>
  </div>
</div>
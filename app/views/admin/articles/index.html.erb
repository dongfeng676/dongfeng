<% content_for :title do %>
  文章列表
<% end %>
<h2 class="col-sm-offset-5">
  <span>文章列表<span>
</h2>
<div class="container">
  <p><%= link_to '添加文章', new_admin_article_path, class: ' btn btn-success'%></p>
  <% if @articles.present? %>
    <div class = "panel panel-default">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>id</th>
            <th>title</th>
            <th>category</th>
            <th>author</th>
            <th>操作</th>
          </tr>
        </thead>
        <tbody>
          <% @articles.each do |article|%>
            <tr>
              <td class="col-sm-2"><%=article.id%></td>
              <td class="col-sm-2"><%=link_to article.name, admin_article_path(article)%></td>
              <td class="col-sm-2"><%=article.category.name%></td>
              <td class="col-sm-2"><%=article.get_user%></td>
              <td class="col-sm-2">
              <% if can? :update, article %>
                <%= link_to '修改',edit_admin_article_path(article)%>|
              <% end %>
              <% if can? :destroy,article%>
                <%= link_to '删除', admin_article_path(article), method: :delete, data: { confirm: '确定要删除吗？' }%> 
              <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= paginate @articles %>
  <% else %>
    <div class="col-sm-offset-2">
      <h2>赶快来添加吧！</h2>
    </div>
  <% end %>
</div>